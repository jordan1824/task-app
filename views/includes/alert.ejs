<% if (errors.length) { %>
  <div class='error-alert'>
    <% errors.forEach(error => { %>
      <p class='alert-message'><%= error %></p>
    <% }) %>
  </div>
<% } %>

<% if (success.length) { %>
  <div class='error-alert alert--green'>
    <% success.forEach(message => { %>
      <p class='alert-message'><%= message %></p>
    <% }) %>
  </div>
<% } %>