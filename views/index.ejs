<%- include('includes/header') %>
  <div class='header'>
    <h1 class='header__title'>Your Tasks</h1>
    <form action="/add-task" method="POST" class='form'>
      <input type="text" name='task' class='task-input' placeholder='Enter your task here...' autofocus>
      <button type="submit" class='submit-btn'>Add Task</button>
    </form>
  </div>
  <div class='tasks-container'>
    <ul class='task-list'>
      <% if (tasks.length) { %>
      <% tasks.forEach(task => { %>
        <li class='task'>
          <h3 class='task-item'><a href="/delete/<%- task._id %>"><i class="fa fa-check" aria-hidden="true"></i></a><%= task.task %></h3>
          <div class='btn-container'>
            <a href="/edit/<%- task._id %>" class='edit-btn btn'>Edit</a>
            <a href="/delete/<%- task._id %>" class='delete-btn btn'>Delete</a>
          </div>
        </li>
      <% }) 
      } else { %>
        <li class='task empty-task'>
          <h3 class='empty-task-title'>You do not have any tasks.</h3>
        </li>
      <%}%>
    </ul>
  </div>
  <script src='/main.js'></script>
  <%- include('includes/footer') %>